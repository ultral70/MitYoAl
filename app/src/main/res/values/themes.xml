<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MitYoAl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonSignIn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorSecundario</item>
        <item name="strokeColor">@color/colorTerciario</item>
        <item name="android:textColor">@color/colorMostaza</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="ButtonGuardarPerfil" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorTerciario</item>
        <item name="strokeColor">@color/colorSecundario</item>
        <item name="android:textColor">@color/colorMostaza</item>
        <item name="cornerRadius">30dp</item>
    </style>

</resources>