<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MitYoAl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimario</item>
        <item name="colorPrimaryVariant">@color/colorPrimario</item>
        <item name="colorOnPrimary">@color/colorTerciario</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecundario</item>
        <item name="colorSecondaryVariant">@color/colorSecundario</item>
        <item name="colorOnSecondary">@color/colorMostaza</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimario</item>
        <item name="colorPrimaryVariant">@color/colorPrimario</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecundario</item>
        <item name="colorSecondaryVariant">@color/colorSecundario</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>

    <style name="ButtonSignIn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorSecundario</item>
        <item name="strokeColor">@color/colorTerciario</item>
        <item name="android:textColor">@color/colorMostaza</item>
        <item name="cornerRadius">30dp</item>
    </style>

</resources>